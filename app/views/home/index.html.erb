<div class="flex flex-col">
  <h1 class="text-4xl font-bold text-blue-500  mb-4">Recent Posts:</h1>
  <div class="grid grid-cols-4 gap-6">
    <% @posts.each do |post| %>
      <div class="border border-gray-300 rounded-lg p-4 mb-4">
        <h2 class="text-2xl font-semibold mb-2"><%= link_to post.title, post_path(post), class: "text-blue-600 hover:underline" %></h2>
        <p class="text-gray-700"><%= truncate(post.content, length: 200) %></p>
        <p class="text-sm text-gray-500 mt-2">Posted on <%= post.created_at.strftime("%B %d, %Y") %> by <%= post.user.name %></p>
      </div>
    <% end %></div>
</div>