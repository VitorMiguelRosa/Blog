<div id="<%= dom_id post %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= post.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Content:</strong>
    <%= post.content %>
  </div>
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= image_tag post.user.avatar, class: "inline-block w-10 h-10 rounded-full mr-2" if post.user.avatar.attached? %>
    <%= post.user.name %>
  </div>
</div>
